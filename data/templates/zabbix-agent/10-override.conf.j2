{% set zabbix_command = 'ip vrf exec ' ~ vrf ~ ' ' if vrf is vyos_defined else '' %}
[Unit]
After=
After=vyos-router.service
ConditionPathExists=
ConditionPathExists=/run/zabbix/zabbix-agent2.conf

[Service]
User=
User=root
ExecStart=
ExecStart={{ zabbix_command }}sudo -E -n -u zabbix /usr/sbin/zabbix_agent2 --config /run/zabbix/zabbix-agent2.conf --foreground
EnvironmentFile=
WorkingDirectory=
WorkingDirectory=/run/zabbix
Restart=always
RestartSec=10
