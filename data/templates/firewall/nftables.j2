{%         for prior, conf in ipv6.output.items() %}
{%             set def_action = conf.default_action %}
    chain VYOS_IPV6_OUTPUT_{{ prior }} {
        type filter hook output priority {{ prior }}; policy {{ def_action }};
{%             if conf.rule is vyos_defined %}
