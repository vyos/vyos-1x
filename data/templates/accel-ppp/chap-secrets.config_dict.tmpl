{% if authentication is defined and authentication.local_users is defined and authentication.local_users.username is defined %}
{%   for user, user_config in authentication.local_users.username.items() %}
{%     if user_config.disabled is not defined %}
{%       if user_config.static_ip %}
{%         set static_ip = user_config.static_ip %}
{%       else %}
{%         set static_ip = '*' %}
{%       endif %}
{%       if user_config.rate_limit is defined %}
{{ "%-12s" | format(user) }} * {{ "%-16s" | format(user_config.password) }} {{ "%-16s" | format(static_ip) }} {{ user_config.rate_limit.download }}/{{ user_config.rate_limit.upload }}
{%       else %}
{{ "%-12s" | format(user) }} * {{ "%-16s" | format(user_config.password) }} {{ "%-16s" | format(static_ip) }}
{%       endif %}
{%     endif %}
{%   endfor %}
{% endif %}
