# mode. As soon as we are not in on-demand mode the default-route handling is
# passed to the ip-up.d/ip-down.s scripts which is required for VRF support.
{%   if 'auto' in default_route %}
defaultroute
{%   elif 'force' in default_route %}
defaultroute
replacedefaultroute
{%   endif %}
{% endif %}
