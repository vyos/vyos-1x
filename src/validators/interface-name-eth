import os
import re

from sys import argv
from sys import exit

pattern = '^(eth|lan)[0-9]+?|lo$'

if __name__ == '__main__':
    if len(argv) != 2:
        exit(1)
    interface = argv[1]

    if re.match(pattern, interface):
        exit(0)
    if os.path.exists(f'/sys/class/net/{interface}'):
        exit(0)
    exit(1)
