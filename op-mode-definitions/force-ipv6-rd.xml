<?xml version="1.0"?>
<interfaceDefinition>
  <node name="force">
    <children>
      <node name="ipv6-rd">
        <properties>
          <help>IPv6 Router Discovery tool</help>
        </properties>
        <children>
          <tagNode name="interface">
            <properties>
              <help>IPv6 Router Discovery tool on a specific interface</help>
              <completionHelp>
                <script>${vyos_completion_dir}/list_interfaces.py</script>
              </completionHelp>
            </properties>
            <command>rdisc6 $4</command>
            <children>
              <tagNode name="address">
                <properties>
                  <help>The IP address of the target</help>
                  <completionHelp>
                    <list>&lt;h:h:h:h:h:h:h:h&gt;</list>
                  </completionHelp>
                </properties>
                <command>rdisc6 $6 $4 -m</command>
              </tagNode>
            </children>
          </tagNode>
        </children>
      </node>
    </children>
  </node>
</interfaceDefinition>
