<?xml version="1.0"?>
<interfaceDefinition>
  <node name="show">
    <children>
      <node name="arp">
        <properties>
          <help>Show Address Resolution Protocol (ARP) information</help>
        </properties>
        <command>${vyos_op_scripts_dir}/show_neigh.py --family inet</command>
        <children>
          <tagNode name="interface">
            <properties>
              <help>Show Address Resolution Protocol (ARP) cache for specified interface</help>
              <completionHelp>
                <script>${vyos_completion_dir}/list_interfaces.py -b</script>
              </completionHelp>
            </properties>
            <command>${vyos_op_scripts_dir}/show_neigh.py --family inet --interface "$4"</command>
          </tagNode>
        </children>
      </node>
    </children>
  </node>
</interfaceDefinition>
