<?xml version="1.0"?>
<interfaceDefinition>
  <node name="show">
    <children>
    <tagNode name="disk">
      <properties>
        <help>Show status of disk device</help>
        <completionHelp>
          <script>${vyos_completion_dir}/list_disks.sh</script>
        </completionHelp>
      </properties>
      <children>
        <leafNode name="format">
          <properties>
            <help>Show disk drive formatting</help>
          </properties>
          <command>${vyos_op_scripts_dir}/show-disk-format.sh $3</command>
        </leafNode>
      </children>
    </tagNode>

    </children>
  </node>
</interfaceDefinition>
