<?xml version="1.0"?>
<interfaceDefinition>
  <node name="disconnect">
    <properties>
      <help>Take down a connection</help>
    </properties>
    <children>
      <tagNode name="interface">
        <properties>
          <help>Take down a connection-oriented network interface</help>
          <completionHelp>
            <path>interfaces pppoe</path>
            <path>interfaces sstpc</path>
            <path>interfaces wwan</path>
          </completionHelp>
        </properties>
        <command>sudo ${vyos_op_scripts_dir}/connect_disconnect.py --disconnect --interface "$3"</command>
      </tagNode>
    </children>
  </node>
</interfaceDefinition>
