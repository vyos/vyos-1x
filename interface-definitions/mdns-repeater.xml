<?xml version="1.0"?>

<!-- mDNS repeater configuration -->

<interfaceDefinition>
  <node name="service">
    <children>
      <node name="mdns">
        <properties>
          <help>Multicast DNS (mDNS) parameters</help>
        </properties>
        <children>
          <node name="repeater" owner="${vyos_sbindir}/vyos-config-mdns-repeater.py">
            <properties>
              <help>mDNS repeater configuration</help>
              <priority>990</priority>
            </properties>
            <children>
              <leafNode name="interface">
                <properties>
                  <help>Interface to repeat mdns advertisements to [REQUIRED]</help>
                  <completionHelp>
                    <script>${vyatta_sbindir}/vyatta-interfaces.pl --show all</script>
                  </completionHelp>
                  <multi/>
                  <type>txt</type>
                </properties>
              </leafNode>
            </children>
          </node>
        </children>
      </node>
    </children>
  </node>
</interfaceDefinition>
