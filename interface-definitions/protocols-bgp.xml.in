          <help>Border Gateway Protocol (BGP)</help>
          <priority>820</priority>
        </properties>
        <children>
          #include <include/bgp/protocol-common-config.xml.i>
          <node name="address-family">
            <children>
              <node name="l2vpn-evpn">
