<?xml version="1.0"?>

<!-- Transparent firewall configuration -->

<interfaceDefinition>
  <node name="firewall">
    <children>
      <node name="policy">
        <properties>
          <help>Firewall policy</help>
        </properties>
        <children>
          <node name="bridge" owner="${vyos_conf_scripts_dir}/firewall-bridge.py">
            <properties>
              <help>Bridge firewall policy</help>
            </properties>
            <children>
              <node name="forward">
                <properties>
                  <help>Bridge firewall policy for forwarded frames</help>
                </properties>
                <children>
                  <leafNode name="ipv4">
                    <properties>
                      <help>Bridge firewall policy for forwarded IPv4 traffic</help>
                      <completionHelp>
                        <path>firewall name</path>
                      </completionHelp>
                    </properties>
                  </leafNode>
                </children>
              </node>
            </children>
          </node>
        </children>
      </node>
    </children>
  </node>
</interfaceDefinition>

